{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "1"
  },
  "permissions": {
    "allow": [
      "Bash(alias *)",
      "Bash(bash *)",
      "Bash(bindkey *)",
      "Bash(cat *)",
      "Bash(chmod *)",
      "Bash(crontab *)",
      "Bash(defaults *)",
      "Bash(docker *)",
      "Bash(echo *)",
      "Bash(find *)",
      "Bash(gh *)",
      "Bash(ghostty *)",
      "Bash(git *)",
      "Bash(grep *)",
      "Bash(lazygit *)",
      "Bash(ln *)",
      "Bash(ls *)",
      "Bash(luac *)",
      "Bash(nvim *)",
      "Bash(osascript *)",
      "Bash(prettier *)",
      "Bash(python3 *)",
      "Bash(sips *)",
      "Bash(stty *)",
      "Bash(tail *)",
      "Bash(test *)",
      "Bash(tmux *)",
      "Bash(tree *)",
      "Bash(tree-sitter *)",
      "Bash(tty *)",
      "Bash(vim *)",
      "Bash(xargs *)",
      "Bash(xattr *)",
      "Bash(yazi *)",
      "Bash(zsh *)",
      "Read(~/Projects/**)",
      "Read(~/dotfiles/**)",
      "Read(~/.claude/**)",
      "Glob(~/Projects/**)",
      "Glob(~/dotfiles/**)",
      "Glob(~/.claude/**)",
      "Grep(~/Projects/**)",
      "Grep(~/dotfiles/**)",
      "Grep(~/.claude/**)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(supabase db diff:*)",
      "Bash(supabase db push:*)",
      "Bash(supabase db reset:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/status.sh waiting"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/status.sh done"
          }
        ]
      }
    ]
  },
  "language": "Japanese",
  "autoUpdatesChannel": "latest",
  "enabledPlugins": {
    "context7@claude-plugins-official": true
  }
}
