/**
 * @see https://github.com/zed-industries/zed/blob/main/assets/keymaps/vim.json
 */
[
  {
    "bindings": {
      "cmd--": "zed::ResetBufferFontSize",
      "cmd-=": "zed::ResetBufferFontSize"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-w h": "workspace::ActivatePaneLeft",
      "ctrl-w l": "workspace::ActivatePaneRight",
      "ctrl-w k": "workspace::ActivatePaneUp",
      "ctrl-w j": "workspace::ActivatePaneDown",
      "ctrl-w ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-w ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-w ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-w ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      "space f f": "file_finder::Toggle",
      "space l f": "editor::Format",
      "space /": "editor::ToggleComments"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "ctrl-d": "vim::DeleteRight",
      "ctrl-k": "vim::DeleteToEndOfLine"
    }
  }
]
