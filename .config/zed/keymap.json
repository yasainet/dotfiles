/**
 * @see https://github.com/zed-industries/zed/blob/main/assets/keymaps/vim.json
 */
[
  {
    "bindings": {
      "cmd--": "zed::ResetBufferFontSize",
      "cmd-=": "zed::ResetBufferFontSize"
    }
  },
  {
    "use_key_equivalents": true,
    "bindings": {
      "cmd-shift-c": null // for DeepL
    }
  },
  {
    "context": "Workspace",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-shift-a": "assistant::ToggleFocus", // cmd-?
      "cmd-shift-g": "git_panel::ToggleFocus" // ctrl-shift-g
    }
  },
  {
    "context": "Pane",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-shift-a": "assistant::ToggleFocus", // cmd-?
      "cmd-shift-g": "git_panel::ToggleFocus" // ctrl-shift-g
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-w h": "workspace::ActivatePaneLeft",
      "ctrl-w l": "workspace::ActivatePaneRight",
      "ctrl-w k": "workspace::ActivatePaneUp",
      "ctrl-w j": "workspace::ActivatePaneDown",
      "ctrl-w ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-w ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-w ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-w ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "n": "search::SelectNextMatch", // cmd-g
      "shift-n": "search::SelectPreviousMatch" // cmd-shift-g
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "ctrl-d": "vim::DeleteRight",
      "ctrl-k": "vim::DeleteToEndOfLine"
    }
  },
  {
    "context": "MessageEditor > Editor",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-shift-r": "agent::OpenAgentDiff" // shift-ctrl-r
    }
  },
  {
    "context": "MessageEditor > Editor && !showing_completions && !showing_code_actions",
    "use_key_equivalents": true,
    "bindings": {
      "enter": "editor::Newline",
      "cmd-enter": "agent::Chat"
    }
  },
  {
    "context": "EditMessageEditor > Editor && !showing_completions && !showing_code_actions",
    "use_key_equivalents": true,
    "bindings": {
      "escape": "menu::Cancel",
      "enter": "editor::Newline",
      "cmd-enter": "menu::Confirm"
    }
  },
  {
    "context": "AgentFeedbackMessageEditor > Editor && !showing_completions && !showing_code_actions",
    "use_key_equivalents": true,
    "bindings": {
      "escape": "menu::Cancel",
      "enter": "editor::Newline",
      "cmd-enter": "menu::Confirm"
    }
  }
]
