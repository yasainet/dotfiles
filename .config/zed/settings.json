{
  "theme": {
    "mode": "system",
    "light": "Tokyo Night Light",
    "dark": "Tokyo Night"
  },
  "experimental.theme_overrides": {
    "background.appearance": "transparent",
    "tab.active_background": "#363b54",
    "text.muted": "#a9b1d6",
    "scrollbar.thumb.border": "#101014",
    // "element.active": "#363b54",
    "element.hover": "#363b54", // or 1a1b26
    "element.selected": "#363b54", // or 1a1b26
    // "ghost_element.active": "#363b54",
    "ghost_element.hover": "#363b54", // or 1a1b26
    "ghost_element.selected": "#363b54" // or 1a1b26
  },
  "icon_theme": {
    "mode": "system",
    "light": "Colored Zed Icons Theme Dark",
    "dark": "Colored Zed Icons Theme Dark"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "buffer_font_size": 14,
  "ui_font_size": 14,
  "vim_mode": true,
  "show_edit_predictions": true,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": true
  },
  "scrollbar": {
    "show": "auto",
    "cursors": false,
    "git_diff": false
  },
  "gutter": {
    "code_actions": false,
    "runnables": false
  },
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "vertical_scroll_margin": 5,
  // "inlay_hints": {
  //   "enabled": true,
  //   "show_type_hints": true,
  //   "show_parameter_hints": true,
  //   "show_other_hints": true
  // },
  "project_panel": {
    "button": false,
    "auto_fold_dirs": false
  },
  "outline_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "git_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "assistant": {
    "version": "2",
    // "default_width": 640,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "enable_experimental_live_diffs": true
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tabs": {
    "git_status": true
  },
  "soft_wrap": "editor_width",
  "tab_size": 2,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "journal": {
    "hour_format": "hour24"
  },
  "terminal": {
    "blinking": "on",
    "button": false,
    "toolbar": {
      "breadcrumbs": false
    }
    // "font_family": "PlemolJP35 Console"
  },
  "code_actions_on_format": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },
  "file_types": {
    "env": [".env.*"],
    "ini": [".npmrc"]
  },
  "languages": {
    "SQL": {
      "prettier": {
        "language": "postgresql"
      }
    }
  },
  "language_models": {
    "anthropic": {
      "version": "1",
      "api_url": "https://api.anthropic.com"
    },
    "google": {
      "api_url": "https://generativelanguage.googleapis.com"
    },
    "ollama": {
      "api_url": "http://localhost:11434"
    },
    "openai": {
      "version": "1",
      "api_url": "https://api.openai.com/v1"
    },
    "lmstudio": {
      "api_url": "http://localhost:1234/api/v0"
    },
    "deepseek": {
      "api_url": "https://api.deepseek.com"
    }
  },
  "preview": {
    "theme": null
  },
  "command_aliases": {
    "W": "w"
  },
  "show_user_picture": false,
  "context_servers": {
    "postgres-context-server": {
      "settings": {
        "database_url": "postgresql://postgres:postgres@127.0.0.1:54322/postgres"
      }
    }
  }
}
