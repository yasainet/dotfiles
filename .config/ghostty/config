# Shell Integration
shell-integration = none

# Clipboard
clipboard-read = allow
clipboard-write = allow
clipboard-paste-protection = false

# Window
window-title-font-family = SF Mono
window-theme = system
window-save-state = always
window-padding-balance = true
macos-titlebar-style = transparent
title = " "
macos-titlebar-proxy-icon = hidden
background-opacity = 0.9
maximize = true

# Theme
theme = TokyoNight Night

# Font
font-family = "PlemolJP35 Console NF"
font-size = 14
# font-feature = -calt
# font-feature = -liga
# font-feature = -dlig
bold-is-bright= true
adjust-cell-height = 25%

# Cursor
cursor-style = block
cursor-style-blink = true

# Mouse
mouse-hide-while-typing = true

# Quick Terminal
quick-terminal-position = center
quick-terminal-screen = main

# Option key as Alt
macos-option-as-alt = left

# Keybindings
keybind = global:cmd+ctrl+\=toggle_quick_terminal
keybind = shift+enter=text:\x1b\r

# Accidental close prevention: unbind Cmd+w, Cmd+q
keybind = cmd+w=unbind

# Use Cmd+Shift+w/q instead
keybind = cmd+shift+w=close_surface

# === tmux === #

# tmux integration: unbind default Cmd+number
keybind = cmd+digit_1=unbind
keybind = cmd+digit_2=unbind
keybind = cmd+digit_3=unbind
keybind = cmd+digit_4=unbind
keybind = cmd+digit_5=unbind
keybind = cmd+digit_6=unbind
keybind = cmd+digit_7=unbind
keybind = cmd+digit_8=unbind
keybind = cmd+digit_9=unbind

# tmux integration: Cmd+number -> select-window
keybind = cmd+one=text:\x021
keybind = cmd+two=text:\x022
keybind = cmd+three=text:\x023
keybind = cmd+four=text:\x024
keybind = cmd+five=text:\x025
keybind = cmd+six=text:\x026
keybind = cmd+seven=text:\x027
keybind = cmd+eight=text:\x028
keybind = cmd+nine=text:\x029

# tmux integration: Cmd+Shift+[/] -> previous/next window
keybind = cmd+shift+bracket_left=text:\x02p
keybind = cmd+shift+bracket_right=text:\x02n

# tmux integration: Cmd+t -> new window
keybind = cmd+t=unbind
keybind = cmd+t=text:\x02c

# tmux integration: Cmd+D -> split horizontal (C-b %)
keybind = cmd+d=unbind
keybind = cmd+d=text:\x02%

# tmux integration: Cmd+Shift+D -> split vertical (C-b ")
keybind = cmd+shift+d=unbind
keybind = cmd+shift+d=text:\x02"

# tmux integration: Cmd+[/] -> previous/next pane
keybind = cmd+bracket_left=text:\x02;
keybind = cmd+bracket_right=text:\x02o

# NOTE: Ctrl+j/k for IME conversion does not work in Ghostty.
# This is a known bug. See: https://github.com/ghostty-org/ghostty/issues/4539
